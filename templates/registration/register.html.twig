{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="max-w-md mx-auto mt-8 p-6 bg-white rounded-md shadow-md">
        <h1 class="text-2xl font-semibold mb-6">Register</h1>

        {{ form_errors(registrationForm) }}

        {{ form_start(registrationForm, {'attr': {'class': 'mb-6'}}) }}

        {{ form_row(registrationForm.email, {'attr': {'class': 'w-full p-2 mb-4 border rounded-md'}}) }}
        {{ form_row(registrationForm.plainPassword, {
            'label': 'Password',
            'attr': {'class': 'w-full p-2 mb-4 border rounded-md'}
        }) }}

        <div class="flex gap-2 mb-2 items-center">
            {{ form_label(registrationForm.agreeTerms, null, {'label_attr': {'class': 'mb-0'}}) }}
            {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'mr-2'}}) }}
        </div>

        {{ form_row(registrationForm.role, {
            'label': 'Role',
            'attr': {'class': 'w-full p-2 mb-4 border rounded-md'}
        }) }}

        <button type="submit" class="bg-blue-500 text-white p-2 rounded-md hover:bg-blue-600 focus:outline-none">
            Register
        </button>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
