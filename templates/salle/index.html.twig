{% extends 'base.html.twig' %}

{% block title %}Salle index{% endblock %}

{% block body %}
    <div class="max-w-2xl mx-auto mt-8 p-6 bg-white rounded-md shadow-md">
        <h1 class="text-2xl font-semibold mb-6">Salle index</h1>

        <table class="table">
            <thead>
            <tr>
                <th class="py-2 px-4 border">Id</th>
                <th class="py-2 px-4 border">Nom</th>
                <th class="py-2 px-4 border">Etage</th>
                <th class="py-2 px-4 border">Capacite_maximum</th>
                <th class="py-2 px-4 border">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for salle in salles %}
                <tr class="border-b">
                    <td class="py-2 px-4 border">{{ salle.id }}</td>
                    <td class="py-2 px-4 border">{{ salle.nom }}</td>
                    <td class="py-2 px-4 border">{{ salle.etage }}</td>
                    <td class="py-2 px-4 border">{{ salle.capaciteMaximum }}</td>
                    <td class="py-2 px-4 border">
                        <a href="{{ path('app_salle_show', {'id': salle.id}) }}" class="text-blue-500 hover:underline">show</a>
                        <a href="{{ path('app_salle_edit', {'id': salle.id}) }}" class="text-yellow-500 hover:underline">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td class="py-2 px-4 border" colspan="5">No records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_salle_new') }}" class="block mt-4 text-blue-500 hover:underline">Create new</a>
    </div>
{% endblock %}
