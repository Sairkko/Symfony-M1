{% extends 'base.html.twig' %}

{% block title %}Atelier index{% endblock %}

{% block body %}
    <div class="max-w-2xl mx-auto mt-8 p-6 bg-white rounded-md shadow-md">
        <h1 class="text-2xl font-semibold mb-6">Atelier index</h1>

        <table class="table">
            <thead>
            <tr>
                <th class="py-2 px-4 border">Id</th>
                <th class="py-2 px-4 border">Nom</th>
                <th class="py-2 px-4 border">Salle</th>
                <th class="py-2 px-4 border">Secteur</th>
                <th class="py-2 px-4 border">Ressource</th>
                <th class="py-2 px-4 border">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for atelier in ateliers %}
                <tr class="border-b">
                    <td class="py-2 px-4 border">{{ atelier.id }}</td>
                    <td class="py-2 px-4 border">{{ atelier.nom }}</td>
                    <td class="py-2 px-4 border">{{ atelier.salle }}</td>
                    <td class="py-2 px-4 border">{{ atelier.secteur }}</td>
                    <td class="py-2 px-4 border">{{ atelier.ressource }}</td>
                    <td class="py-2 px-4 border">
                        <a href="{{ path('app_atelier_show', {'id': atelier.id}) }}" class="text-blue-500 hover:underline">show</a>
                        <a href="{{ path('app_atelier_edit', {'id': atelier.id}) }}" class="text-yellow-500 hover:underline">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3" class="py-2 px-4 border">No records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_atelier_new') }}" class="block mt-4 text-blue-500 hover:underline">Create new</a>
    </div>
{% endblock %}
