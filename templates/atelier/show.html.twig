{% extends 'base.html.twig' %}

{% block title %}Atelier{% endblock %}

{% block body %}
    <div class="max-w-md mx-auto mt-8 p-6 bg-white rounded-md shadow-md">
        <h1 class="text-2xl font-semibold mb-6">Atelier</h1>

        <table class="table">
            <tbody>
            <tr>
                <th class="py-2 px-4 border">Id</th>
                <td class="py-2 px-4 border">{{ atelier.id }}</td>
            </tr>
            <tr>
                <th class="py-2 px-4 border">Nom</th>
                <td class="py-2 px-4 border">{{ atelier.nom }}</td>
            </tr>
            <tr>
                <th class="py-2 px-4 border">Nom</th>
                <td class="py-2 px-4 border">{{ atelier.intervenant }}</td>
            </tr>
            <tr>
                <th class="py-2 px-4 border">Salle</th>
                <td class="py-2 px-4 border">{{ atelier.salle }}</td>
            </tr>
            <tr>
                <th class="py-2 px-4 border">Secteur</th>
                <td class="py-2 px-4 border">{{ atelier.secteur }}</td>
            </tr>
            <tr>
                <th class="py-2 px-4 border">Ressource</th>
                <td class="py-2 px-4 border">{{ atelier.ressource }}</td>
            </tr>
            </tbody>
        </table>

        <a href="{{ path('app_atelier_index') }}" class="block mt-4 text-blue-500 hover:underline">Back to list</a>

        <a href="{{ path('app_atelier_edit', {'id': atelier.id}) }}" class="block mt-2 text-yellow-500 hover:underline">Edit</a>

        {{ include('atelier/_delete_form.html.twig') }}
    </div>
{% endblock %}
