{% extends 'base.html.twig' %}

{% block title %}Métiers{% endblock %}

{% block body %}
    <div class="max-w-5xl mx-auto mt-8 p-6 bg-white rounded-md shadow-md">
        <h1 class="text-2xl font-semibold mb-6">Métiers</h1>

        <table class="min-w-full leading-normal">
            <thead>
            <tr>
                <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Id</th>
                <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Nom</th>
                <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Compétence</th>
                <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Activités</th>
                <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for metier in metiers %}
                <tr>
                    <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">{{ metier.id }}</td>
                    <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">{{ metier.nom }}</td>
                    <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">
                        {% for competences in metier.competence %}
                            {{ competences.nom }}{% if not loop.last %}, {% endif %}
                        {% else %}
                            Aucune compétence
                        {% endfor %}
                    </td>
                    <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">
                        {% for activites in metier.activite %}
                           {{ activites.nom }}{% if not loop.last %}, {% endif %}
                        {% else %}
                            Aucune activité
                        {% endfor %}
                    </td>
                    <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">
                        <a href="{{ path('app_metier_show', {'id': metier.id}) }}" class="inline-block bg-blue-500 hover:bg-blue-700 text-white p-2 rounded">
                            <i class="fa-regular fa-eye fa-xl"></i>
                        </a>
                        <a href="{{ path('app_metier_edit', {'id': metier.id}) }}" class="inline-block bg-yellow-500 hover:bg-yellow-700 text-white p-2 rounded ml-4">
                            <i class="fa-solid fa-pen-to-square fa-xl"></i>
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3" class="px-5 py-5 border-b border-gray-200 bg-white text-sm">Aucun enregistrement trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_metier_new') }}" class="mt-4 bg-green-500 hover:bg-green-700 text-white p-2 rounded inline-block">
            <i class="fa-solid fa-plus fa-xl"></i>
        </a>
    </div>
{% endblock %}
