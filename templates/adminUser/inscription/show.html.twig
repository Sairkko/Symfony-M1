{% extends 'base.html.twig' %}

{% block title %}Lycéen{% endblock %}

{% block body %}
    <div class="max-w-5xl mx-auto my-8 p-6 bg-white rounded-md shadow-md">
        <div class="flex my-4">
            <a href="{{ path('app_inscription_index') }}" class="inline-block bg-blue-500 hover:bg-blue-700 text-white p-2 rounded">
                <i class="fa-solid fa-arrow-left fa-xl"></i>
            </a>
        </div>
        <h1 class="text-2xl font-semibold mb-6 text-start">Lycéen</h1>

        <table class="min-w-full leading-normal">
            <tbody>
            <tr class="border-b">
                <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Id</th>
                <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">{{ inscription.id }}</td>
            </tr>
            <tr class="border-b">
                <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Téléphone</th>
                <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">{{ inscription.telephone }}</td>
            </tr>
            <tr class="border-b">
                <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Date</th>
                <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">{{ inscription.date ? inscription.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr class="border-b">
                <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Nom</th>
                <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">{{ inscription.nom }}</td>
            </tr>
            <tr class="border-b">
                <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Prénom</th>
                <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">{{ inscription.prenom }}</td>
            </tr>
            <tr class="border-b">
                <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Lycée</th>
                <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">{{ inscription.lycee }}</td>
            </tr>
            <tr class="border-b">
                <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Section</th>
                <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">{{ inscription.section }}</td>
            </tr>
            </tbody>
        </table>
        <div class="flex justify-start space-x-2 mt-4">
            <a href="{{ path('app_inscription_edit', {'id': inscription.id}) }}" class="inline-block bg-yellow-500 hover:bg-yellow-700 text-white p-2 rounded">
                <i class="fa-solid fa-pen-to-square fa-xl"></i>
            </a>
            {{ include('adminUser/inscription/_delete_form.html.twig') }}
        </div>

    </div>
{% endblock %}
