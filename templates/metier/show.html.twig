{% extends 'base.html.twig' %}

{% block title %}Metier{% endblock %}

{% block body %}
    <div class="max-w-md mx-auto mt-8 p-6 bg-white rounded-md shadow-md">
        <h1 class="text-2xl font-semibold mb-6">Metier</h1>

        <table class="table w-full border-collapse">
            <tbody>
            <tr class="border-b">
                <th class="py-2 px-4 border">Id</th>
                <td class="py-2 px-4 border">{{ metier.id }}</td>
            </tr>
            <tr class="border-b">
                <th class="py-2 px-4 border">Nom</th>
                <td class="py-2 px-4 border">{{ metier.nom }}</td>
            </tr>
            </tbody>
        </table>

        <a href="{{ path('app_metier_index') }}" class="block mt-4 text-blue-500 hover:underline">Back to list</a>

        <a href="{{ path('app_metier_edit', {'id': metier.id}) }}" class="block mt-2 text-yellow-500 hover:underline">Edit</a>

        {{ include('metier/_delete_form.html.twig') }}
    </div>
{% endblock %}
