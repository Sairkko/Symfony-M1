{% extends 'base.html.twig' %}
{% block body %}
    <div class="container mx-auto">
        {% if is_granted('ROLE_ADMIN') %}
            <div class="grid gap-2 m-24 mb-0 mt-8">
                <div class="border-2 col-span-12 border-blue-500 rounded-lg align-center flex flex-col gap-y-2 text-center items-center justify-center p-2">
                    <p class="text-2xl">Ateliers</p>
                    <p>Liste de tous les ateliers disponibles</p>
                    <a class="bg-blue-500 py-1 px-3 rounded-lg text-white" href="{{ path('app_atelier_index') }}">Détails</a>
                </div>
                <div class="border-2 col-span-4 border-blue-500 rounded-lg flex flex-col gap-y-2 items-center text-center justify-center p-2">
                    <p class="text-2xl">Métier</p>
                    <p>Liste de tous les métiers disponibles</p>
                    <a class="bg-blue-500 py-1 px-3 rounded-lg text-white" href="{{ path('app_metier_index') }}">Détails</a>
                </div>
                <div class="border-2 col-span-4 border-blue-500 rounded-lg flex flex-col gap-y-2 items-center text-center justify-center p-2">
                    <p class="text-2xl">Activités</p>
                    <p>Liste de toutes les activités disponibles</p>
                    <a class="bg-blue-500 py-1 px-3 rounded-lg text-white" href="{{ path('app_activite_index') }}">Détails</a>
                </div>
                <div class="border-2 col-span-4 border-blue-500 rounded-lg flex flex-col gap-y-2 items-center text-center justify-center p-2">
                    <p class="text-2xl">Compétences</p>
                    <p>Liste de toutes les compétences</p>
                    <a class="bg-blue-500 py-1 px-3 rounded-lg text-white" href="{{ path('app_competence_index') }}">Détails</a>
                </div>
                <div class="border-2 col-span-4 border-blue-500 rounded-lg flex flex-col gap-y-2 items-center text-center justify-center p-2">
                    <p class="text-2xl">Secteurs</p>
                    <p>Liste de tous les secteurs</p>
                    <a class="bg-blue-500 py-1 px-3 rounded-lg text-white" href="{{ path('app_secteur_index') }}">Détails</a>
                </div>
                <div class="border-2 col-span-4 border-blue-500 rounded-lg flex flex-col gap-y-2 items-center text-center justify-center p-2">
                    <p class="text-2xl">Ressources</p>
                    <p>Liste de toutes les ressources disponibles</p>
                    <a class="bg-blue-500 py-1 px-3 rounded-lg text-white" href="{{ path('app_ressource_index') }}">Détails</a>
                </div>
                <div class="border-2 col-span-4 border-blue-500 rounded-lg flex flex-col gap-y-2 items-center text-center justify-center p-2">
                    <p class="text-2xl">Salles</p>
                    <p>Liste de toutes les salles</p>
                    <a class="bg-blue-500 py-1 px-3 rounded-lg text-white" href="{{ path('app_salle_index') }}">Détails</a>
                </div>
                <div class="border-2 col-span-4 border-blue-500 rounded-lg flex flex-col gap-y-2 items-center text-center justify-center p-2">
                    <p class="text-2xl">Lycéens</p>
                    <p>Liste de tous les lycéens</p>
                    <a class="bg-blue-500 py-1 px-3 rounded-lg text-white" href="{{ path('app_inscription_index') }}">Détails</a>
                </div>
                <div class="border-2 col-span-4 border-blue-500 rounded-lg flex flex-col gap-y-2 items-center text-center justify-center p-2">
                    <p class="text-2xl">Lycée</p>
                    <p>Liste de tous les lycées des lycéens</p>
                    <a class="bg-blue-500 py-1 px-3 rounded-lg text-white" href="{{ path('app_lycee_index') }}">Détails</a>
                </div>
                <div class="border-2 col-span-4 border-blue-500 rounded-lg flex flex-col gap-y-2 items-center text-center justify-center p-2">
                    <p class="text-2xl">Sections</p>
                    <p>Liste de toutes les sections</p>
                    <a class="bg-blue-500 py-1 px-3 rounded-lg text-white" href="{{ path('app_section_index') }}">Détails</a>
                </div>
            </div>
        {% endif %}
        <h1 class="text-2xl font-bold mb-4 p-6 text-center">Forum 2024 - Liste des ateliers</h1>

        {% if ateliers is not empty %}
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
                {% for atelier in ateliers %}
                    <div class="bg-white p-6 rounded-lg shadow-md">
                        <h2 class="text-xl font-semibold mb-2">{{ atelier.getNom() }}</h2>
                        <p class="text-gray-600 text-sm mb-2">
                            <span class="font-semibold">Date :</span> Du {{ atelier.getDateDebut()|date('d-m-Y') }} au {{ atelier.getDateFin()|date('d-m-Y') }}
                        </p>
                        <p class="text-gray-600 text-sm mb-2">
                            <span class="font-semibold">Salle :</span>
                            {% for salle in atelier.getSalle() %}
                                {{ salle.getNom() }}{% if not loop.last %}, {% endif %}
                            {% else %}
                                Aucune salle associé
                            {% endfor %}
                        </p>
                        <p class="text-gray-600 text-sm mb-2">
                            <span class="font-semibold">Métier(s) :</span>
                            {% for metier in atelier.getMetier() %}
                                {{ metier.getNom() }}{% if not loop.last %}, {% endif %}
                            {% else %}
                                Aucun métier associé
                            {% endfor %}
                        </p>
                        <p class="text-gray-600 text-sm mb-2">
                            <span class="font-semibold">Ressource :</span>
                            {% for ressource in atelier.getRessource() %}
                                {{ ressource.getNom() }}{% if not loop.last %}, {% endif %}
                            {% else %}
                                Aucune ressource associé
                            {% endfor %}
                        </p>
                        <p class="text-gray-600 text-sm mb-2">
                            <span class="font-semibold">Secteur :</span> {{ atelier.getSecteur() }}
                        </p>
                        <div class="flex flex-col gap-2 items-center justify-center">
                            <p class="inline-block px-5 bg-gray-500 text-white border rounded">
                                <span class="font-semibold">Intervenant(s):</span> {{ atelier.getIntervenant() }}
                            </p>
                            <a href="{{ path('detail-atelier', {'id': atelier.getId()}) }}" class="bg-blue-500 hover:bg-blue-700 text-white font-semibold px-2 border border-blue-500 rounded">
                                Détail
                            </a>
                        </div>

                        <!-- Ajoutez d'autres informations selon vos besoins -->
                    </div>

                {% endfor %}
            </div>
        {% else %}
            <p class="text-gray-500">Aucun atelier trouvé.</p>
        {% endif %}
    </div>
{% endblock %}
