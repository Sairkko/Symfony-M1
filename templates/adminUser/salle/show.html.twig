{% extends 'base.html.twig' %}

{% block title %}Salle{% endblock %}

{% block body %}
    <div class="max-w-md mx-auto mt-8 p-6 bg-white rounded-md shadow-md">
        <h1 class="text-2xl font-semibold mb-6">Salle</h1>

        <table class="table">
            <tbody>
            <tr>
                <th class="py-2 px-4 border">Id</th>
                <td class="py-2 px-4 border">{{ salle.id }}</td>
            </tr>
            <tr>
                <th class="py-2 px-4 border">Nom</th>
                <td class="py-2 px-4 border">{{ salle.nom }}</td>
            </tr>
            <tr>
                <th class="py-2 px-4 border">Etage</th>
                <td class="py-2 px-4 border">{{ salle.etage }}</td>
            </tr>
            <tr>
                <th class="py-2 px-4 border">Capacite_maximum</th>
                <td class="py-2 px-4 border">{{ salle.capaciteMaximum }}</td>
            </tr>
            </tbody>
        </table>

        <a href="{{ path('app_salle_index') }}" class="block mt-4 text-blue-500 hover:underline">Back to list</a>

        <a href="{{ path('app_salle_edit', {'id': salle.id}) }}" class="block mt-2 text-yellow-500 hover:underline">Edit</a>

        {{ include('adminUser/salle/_delete_form.html.twig') }}
    </div>
{% endblock %}
